@import "nib"
@import "basic"

.horizontal-form {
  .row {
    overflow: hidden;
    display: flex;
    margin: 15px 0;
    label {
      display:block;
      float:left;
      flex: 1;

    }
    input[type="text"], input[type="password"], input[type="email"] {
      width: 200px;
    }
  }
  .buttons {
    text-align: right;
    margin: 15px 0;
  }
}

.login-form {
  fieldset {
    background-color: #f5f5f5;
    background: linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(242,242,242,1) 100%);
    border-radius: 10px;
    display: block;
    overflow: hidden;
    width: 500px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -150px 0 0 -250px;
    legend {
      font-weight: bold;
    }
  }
}

